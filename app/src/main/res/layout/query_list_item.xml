<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DCDCDC">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"
                android:id="@+id/dp"
                android:layout_marginStart="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:textSize="18sp"
                android:layout_toEndOf="@+id/dp"
                android:layout_toRightOf="@+id/dp"
                android:layout_marginLeft="10dp"
                android:hint="Username"
                android:textStyle="bold"
                android:id="@+id/userName"
                android:textColor="@color/black"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_centerHorizontal="true"
                android:hint="timestamp"
                android:textColor="#303030"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/timStamp"
                android:layout_toEndOf="@+id/dp"
                android:layout_marginStart="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/timStamp"
                android:layout_marginTop="30dp"
                android:hint="Hii"
                android:textAlignment="center"
                android:textColor="#000000"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:padding="20dp"
                android:id="@+id/queryDesc"
                android:gravity="center_horizontal"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/likeBtn"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queryDesc"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="2dp"
                app:srcCompat="@mipmap/grey_like"
                />

            <TextView
                android:id="@+id/imgMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:text="Image/images attached!\n Tap to view"
                android:textColor="#FF3300"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queryDesc"
                android:layout_marginTop="14dp"
                android:layout_alignLeft="@+id/likeBtn"
                android:layout_marginLeft="50dp"
                android:text="0 Likes"
                android:textSize="16sp"
                android:layout_alignStart="@+id/likeBtn"
                android:layout_marginStart="45dp"
                android:id="@+id/likesCount"/>

            <ImageView
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/comment"
                android:layout_toRightOf="@id/likesCount"
                android:layout_marginLeft="140dp"
                android:layout_below="@+id/queryDesc"
                android:id="@+id/imgComment"
                android:layout_marginStart="140dp"
                android:layout_toEndOf="@id/likesCount" />
            <TextView
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgComment"
                android:layout_below="@+id/queryDesc"
                android:text="0 Comments"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@id/imgComment"
                android:layout_marginStart="6dp"
                android:id="@+id/commentCount"/>


        </RelativeLayout>












    </androidx.cardview.widget.CardView>











</androidx.constraintlayout.widget.ConstraintLayout>








