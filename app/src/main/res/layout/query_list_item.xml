<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D9CED6">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/profile"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                android:layout_toEndOf="@+id/dp"
                android:layout_toRightOf="@+id/dp"
                android:hint="Username"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/dp"
                android:layout_toRightOf="@+id/dp"
                android:hint="timestamp"
                android:textColor="#303030"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/queryDesc"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/timStamp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:hint="Hii"
                android:padding="20dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/likeBtn"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queryDesc"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="2dp"
                app:srcCompat="@mipmap/grey_like" />

            <TextView
                android:id="@+id/imgMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="View attached Images"
                android:textColor="#DB1F48"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/likesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queryDesc"
                android:layout_alignStart="@+id/likeBtn"
                android:layout_alignLeft="@+id/likeBtn"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imgComment"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queryDesc"
                android:layout_marginStart="210dp"
                android:layout_marginLeft="210dp"
                android:layout_toEndOf="@id/likesCount"
                android:layout_toRightOf="@id/likesCount"
                android:src="@mipmap/comment" />

            <TextView
                android:id="@+id/commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/queryDesc"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:text="0"
                android:layout_toEndOf="@id/imgComment"
                android:layout_toRightOf="@id/imgComment"
                android:textSize="20sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>











</androidx.constraintlayout.widget.ConstraintLayout>








