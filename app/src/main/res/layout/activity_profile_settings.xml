<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingsActivity"
    android:background="#D9CED6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp">


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="180dp"
                android:layout_height="53dp"
                android:layout_alignBottom="@+id/profile_img"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/elevation2"
                android:fontFamily="@font/harry"
                android:includeFontPadding="false"
                android:padding="4dp"
                android:text="Hello MiniBuzz"
                android:textColor="@color/white"
                android:elevation="3dp"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true">

            </TextView>

            <ImageView
                android:id="@+id/profile_img"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:background="@drawable/imageshadow"
                android:src="@drawable/profile">

            </ImageView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="12dp">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Full Name"
                android:elevation="4dp"
                android:background="@drawable/elevation_effect">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txtName"
                    android:letterSpacing="0.3"
                    android:textSize="20dp">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Contact Details"
                android:elevation="4dp"
                android:background="@drawable/elevation_effect">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txtContact"
                    android:letterSpacing="0.3"
                    android:textSize="20dp">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Other Profile"
                android:elevation="4dp"
                android:background="@drawable/elevation_effect">


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/txtOther"
                    android:letterSpacing="0.3"
                    android:textSize="20dp">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="WhAt'S oN yoUr Mind"
                android:elevation="4dp"
                android:background="@drawable/elevation_effect">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDescription"
                    android:letterSpacing="0.3"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:height="80dp">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/save"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_elevation"
                android:backgroundTint="@color/black"
                android:text="CHANGE IT !!"
                android:textColor="@color/white"
                android:padding="20dp"
                android:elevation="8dp">

            </Button>

            <Button
                android:id="@+id/myQueryFeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Go to Feed" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>